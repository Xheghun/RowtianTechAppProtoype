<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.RTP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryLight</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="android:textColorPrimary">@color/colorSecondaryText</item>
    </style>
    <style name="Widget.RTP.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.RTP.TextInputLayout.HintText</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">#BDBDBD</item>
    </style>
    <style name="TextAppearance.RTP.Toolbar" parent="">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.RTP.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="Widget.RTP.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="elevation">0dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Widget.RTP.Button.Elevated" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@animator/rtp_login_button_state_list_anim</item>
        <item name="elevation">8dp</item>
    </style>
    <style name="TextAppearance.RTP.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Widget.RTP.Backdrop" parent="">
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="Widget.RTP.TextButton.Light" parent="Widget.RTP.TextButton">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="Widget.RTP.TextHeadLine" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>
    <style name="Widget.RTP.TitleText" parent="Widget.RTP.TextHeadLine">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="Widget.RTP.DescriptionText" parent="Widget.RTP.TitleText">
        <item name="fontFamily">@font/roboto_light</item>
    </style>
</resources>
